<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Funcionario[0].NomeFuncionario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Funcionario[0].Cpf)
