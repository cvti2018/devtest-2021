@model AspNetCorePages.Pages.Epis.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Epi[0].NomEpi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Epi[0].DatInclusao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Epi[0].DatValidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Epi[0].NumCa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Epi[0].NumProcesso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Epi[0].NomFabricante)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Epi[0].CnpjFabricante)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Epi) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomEpi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatInclusao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatValidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumCa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumProcesso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomFabricante)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CnpjFabricante)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
